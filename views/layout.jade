    script.
        function showFilter(value) {
            var i;
            for (i = 1; i < document.getElementsByTagName('select').length; i++) {
                document.getElementsByTagName('select')[i].style.display = 'none';
            }
            if(value !== ''){
                document.getElementById(value).style.display = 'inline';
            }
        }
    
    script.
        function resetFilter() {
            var i;
            for (i = 0; i < document.getElementsByTagName('select').length; i++) {
                document.getElementsByTagName('select')[i].selectedIndex = "0";
            }
            for (i = 1; i < document.getElementsByTagName('select').length; i++) {
                document.getElementsByTagName('select')[i].style.display = 'none';
            }
            if (document.getElementsByTagName('table').length > 1) {
                for (i = 1; i < document.getElementsByTagName('table').length; i++) {
                    document.body.removeChild(document.getElementsByTagName('table')[i]);
                }
            }
        }
    
    script.
        function hideAll() {
            var x = document.getElementsByTagName('table');
            var i;
            for (i = 0; i < x.length; i++) {
                x[i].style.display = 'none';
            }
            
            for (i = 0; i < document.getElementsByTagName('select').length; i++) {
                document.getElementsByTagName('select')[i].selectedIndex = "0";
            }
            for (i = 1; i < document.getElementsByTagName('select').length; i++) {
                document.getElementsByTagName('select')[i].style.display = 'none';
            }
        }

